<?xml version="1.0" encoding="UTF-8"?>
<extension type="component" version="2.5.9" method="upgrade">
	<name>JCQ</name>
	<description>Joomla Complex Questionnaires: Component for creating and handling complex questionnaires with an API to calculate and work with the acquired data.</description>
	<author>Konrad Daemon, Daniela Staritzbichler</author>
	<authorEmail>konrad.daemon@sbg.ac.at</authorEmail>
	<authorURL>http://www.uni-salzburg.at/</authorURL>
	<creationDate>December 2011</creationDate>
	<copyright>(C) 2011 Konrad Daemon, Daniela Staritzbichler</copyright>
	<license>http://www.gnu.org/copyleft/gpl.html</license>
	<version>0.0.1</version>
	
	<scriptfile>script.php</scriptfile>
	        
    <install>
    	<sql>
        	<file driver="mysql" charset="utf8">sql/install.mysql.utf8.sql</file>
        </sql>
	</install>
    <uninstall>
    	<sql>
        	<file driver="mysql" charset="utf8">sql/uninstall.mysql.utf8.sql</file>
    	</sql>
    </uninstall> 
	<update>
    	<schemas>
        	<schemapath type="mysql">sql/updates/mysql</schemapath>
        </schemas>
    </update>
	
	<files folder="site">
		<filename>index.html</filename>
		<filename>jcq.php</filename>		
		<filename>jcq.css</filename>
		<filename>jcqcontroller.php</filename>
		<folder>js</folder>
		<folder>models</folder>
		<folder>tmpl</folder>
		<folder>views</folder>	
	</files>
	
	<administration>
		<menu>JCQ</menu>
	 	
		<files folder="admin">
	   		<filename>index.html</filename>
			<filename>jcq.css</filename>
			<filename>jcq.php</filename>
	   		<filename>jcqcontroller.php</filename>
			<folder>includes</folder>
			<folder>js</folder>
	   		<folder>models</folder>
			<folder>sql</folder>
			<folder>tables</folder>
			<folder>userdata</folder>
			<folder>views</folder>	
	 	</files>
	</administration>
	
</extension>

